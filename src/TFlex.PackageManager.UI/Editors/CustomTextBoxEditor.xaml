<UserControl x:Class="TFlex.PackageManager.UI.Editors.CustomTextBoxEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TFlex.PackageManager.UI.Editors"
             mc:Ignorable="d" 
             d:DesignHeight="30" 
             d:DesignWidth="300">
    <Grid>
        <TextBox Name="textBox" 
                 Padding="3" 
                 BorderBrush="White" 
                 Text="{Binding Value, RelativeSource={RelativeSource AncestorType=local:CustomTextBoxEditor}}" />
    </Grid>
</UserControl>
